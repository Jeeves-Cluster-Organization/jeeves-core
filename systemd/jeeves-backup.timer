[Unit]
Description=Daily backup timer for Jeeves database
Documentation=https://github.com/Jeeves-Cluster-Organization/jeeves-core

[Timer]
# Run daily at 2 AM
OnCalendar=daily
OnCalendar=*-*-* 02:00:00

# If system was off during scheduled time, run on next boot
Persistent=true

# Randomize start time by up to 15 minutes to avoid conflicts
RandomizedDelaySec=15min

[Install]
WantedBy=timers.target
